{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "typeRoots": [
            "../node_modules/@types/"
        ],
        "types": [
            "node"
         ]
    },
    "exclude": [
	    "node_modules",
        "client/dev/assets/**/*",
        "client/dist/assets/**/*"
    ],
    "filesGlob": [
      "**/*.ts"
    ]
}
